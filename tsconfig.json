{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "ES2020",
    "lib": ["ES2020","dom"],
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "paths": {
      "@infra/*": ["infra/*"],
      "@types/*": ["packages/types/*"],
      "@common/*": ["packages/common/*"]
    }
  },
  "references": [
    { "path": "apps/backend" },
    { "path": "apps/frontend" },
    { "path": "packages/common" },
    { "path": "packages/types" }
  ]
}
